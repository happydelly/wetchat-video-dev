<view>
    <form bindsubmit='upload'>

      <radio-group name="bgmId">
        <view wx:for="{{songList}}" class="container" style="padding-left:30rpx">
          <iaudio src="{{serverUrl}}{{item.path}}"
                  songName="{{item.name}}"
                  singer="{{item.author}}"
                  duration="{{item.duration}}" class="audio-wapper">
          </iaudio>
          <radio style="margin-top:120rpx;" value="{{item.id}}"></radio>
        </view>
        
      </radio-group>
        <view class="inputView">
            <label class="loginLabel">视频描述：</label>
            <input name="desc" class="inputText" placeholder="说点什么吧" />
        </view>

        <!-- 提交 -->
        <button class="submitBtn" type="primary" form-type='submit'>上传视频</button>
        
        <button class="gobackBtn" type="warn" form-type='reset'>重置</button>
    </form>
</view>